{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/function-component-definition": 0,
		"arrow-body-style": 0,
		"no-alert": 0,
		"no-shadow": 0,
		"react/react-in-jsx-scope": 0,
		"react/prop-types": 0,
		"no-plusplus": 0,
		"no-param-reassign": 0
	},
	"ignorePatterns": ["**/src/tests/*.jsx", "**/vite.config.js"]
}
